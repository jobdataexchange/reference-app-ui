<div class="pt-4 d-flex justify-content-end">
  <button class="btn pr-0 exit-button" aria-label="Exit">
    <i class="fas fa-times" style="font-size: 36px;"></i>
  </button>
  <div class="confirm-exit d-none">
    <div class="d-flex align-items-baseline">
      Exit now? This will lose unsaved work.
      <button class="btn btn-lg text-primary exit-now">Exit</button>
      <button class="btn btn-lg text-primary keep-working">Keep Working</button>
    </div>
  </div>
</div>

<div class="pt-4 d-flex justify-content-between">
  <h1 class="pb-4">Employment Relationship</h1>
  <p class="flex-shrink-0">3 of 11</p>
</div>

<p class="w-75 mb-5">Lorem ipsum.</p>

<form>
  <div class="form-group mb-4">
    <label class="font-weight-bold" for="job-agreement">Job Agrement</label>
    <select id="job-agreement" class="form-control form-control-lg">
      <option value="1">Select</option>
      <option value="2">Employee</option>
      <option value="2">Employee eligible for overtime</option>
      <option value="2">Employee not eligible for overtime</option>
      <option value="2">Collectively-bargained employee</option>
      <option value="2">Contract</option>
      <option value="2">Contract-to-hire</option>
      <option value="2">Internship</option>
      <option value="2">Externship</option>
      <option value="2">Apprenticeship</option>
      <option value="2">Student volunteer</option>
    </select>
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="job-term">Job Term</label>
    <select id="job-term" class="form-control form-control-lg">
      <option value="1">Select</option>
      <option value="2">Temporary</option>
      <option value="2">Regular</option>
      <option value="2">Seasonal</option>
    </select>
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="job-schedule">Job Schedule</label>
    <select id="job-schedule" class="form-control form-control-lg">
      <option value="1">Select</option>
      <option value="2">Full-time</option>
      <option value="2">Part-time</option>
      <option value="2">Flextime</option>
      <option value="2">Hourly</option>
      <option value="2">Shared-time</option>
    </select>
  </div>

  <div class="d-flex justify-content-between pt-5">
    <button type="button" class="btn btn-lg text-primary d-flex align-items-center p-0"><i class="fas fa-angle-left text-primary mr-3" style="font-size: 24px;"></i>Back</button>
    <button type="submit" class="btn btn-lg btn-primary">Next</button>
  </div>
</form>



<script>
  $(document).ready(function(){

    $('.exit-button').click(function(e){
      $(this).hide();
      $('.confirm-exit').removeClass('d-none');
    });

    $('.keep-working').click(function(e){
      $('.exit-button').show();
      $('.confirm-exit').addClass('d-none');
    });
  });
</script>
