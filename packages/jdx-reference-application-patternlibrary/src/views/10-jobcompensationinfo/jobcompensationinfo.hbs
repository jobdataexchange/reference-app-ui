<div class="pt-4 d-flex justify-content-end">
  <button class="btn pr-0 exit-button" aria-label="Exit">
    <i class="fas fa-times" style="font-size: 36px;"></i>
  </button>
  <div class="confirm-exit d-none">
    <div class="d-flex align-items-baseline">
      Exit now? This will lose unsaved work.
      <button class="btn btn-lg text-primary exit-now">Exit</button>
      <button class="btn btn-lg text-primary keep-working">Keep Working</button>
    </div>
  </div>
</div>


<div class="pt-4 d-flex justify-content-between">
  <p>COMPENSATION & WORK HOURS</p>
  <p class="flex-shrink-0">4 of 7</p>
</div>

<h1 class="pb-4">Compensation Info</h1>
<p class="w-75 mb-5">Lorem ipsum.</p>

<form>

  <div class="form-group mb-5">
    <label class="font-weight-bold" for="currency">Currency</label>
    <select id="currency" class="form-control form-control-lg">
      <option>USD</option>
    </select>
  </div>

  <fieldset class="form-group mb-5">
    <legend class="h6 font-weight-bold">Base Salary</legend>

    <div class="form-group mb-2">
      <label class="font-weight-bold" for="minimum">Minimum</label>
      <input type="text" class="form-control form-control-lg" id="minimum" placeholder="Minimum">
    </div>

    <div class="form-group mb-2">
      <label class="font-weight-bold" for="maximum">Maximum</label>
      <input type="text" class="form-control form-control-lg" id="maximum" placeholder="Maximum">
    </div>

    <div class="form-group mb-2">
      <label class="font-weight-bold" for="currency">Frequency</label>
      <select id="currency" class="form-control form-control-lg">
        <option>Year</option>
        <option>Hour</option>
      </select>
    </div>
  </fieldset>

  <div class="form-group mb-5">
    <label class="font-weight-bold" for="incentive-compensation-info">Incentive Compensation</label>
    <input type="text" class="form-control form-control-lg" id="incentive-compensation-info" placeholder="Incentive Compensation Info">
  </div>

  <div class="form-group mb-5">
    <fieldset class="benefits form-group mb-1">
      <legend class=" h6 font-weight-bold">Job Benefit</legend>
      <div class="benefit-field d-flex mb-2">
        <input value="Health Insurance" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Dental Insurance" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Vision Insurance" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Life Insurance" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="PTO" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="401(k)" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Gym membership" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Commuting/travel assistance" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
      <div class="benefit-field d-flex mb-2">
        <input value="Workplace perks such as recreation activities, food and coffee" type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">
        <button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;"><span aria-hidden="true">&times;</span></button>
      </div>
    </fieldset>
    <button type="button" class="add-benefit btn btn-outline-primary btn-lg">+ Add Benefit</button>
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="work-hours">Work Hours</label>
    <select id="work-hours" class="form-control form-control-lg">
      <option value="1">Select</option>
      <option value="2">Normal work hours</option>
      <option value="2">Changing work hours</option>
      <option value="2">Flexible work hours (set your own schedule)</option>
    </select>
  </div>

  <div class="d-flex justify-content-between pt-5">
    <button type="button" class="btn btn-lg text-primary d-flex align-items-center p-0"><i class="fas fa-angle-left text-primary mr-3" style="font-size: 24px;"></i>Back</button>
    <button type="submit" class="btn btn-lg btn-primary">Next</button>
  </div>
</form>





<script>
  $(document).ready(function(){

    $('.exit-button').click(function(e){
      $(this).hide();
      $('.confirm-exit').removeClass('d-none');
    });

    $('.keep-working').click(function(e){
      $('.exit-button').show();
      $('.confirm-exit').addClass('d-none');
    });

    $(document).on('click', 'button.close', function() {
      $(this).parent().remove();
    });

    $('button.add-benefit').click(function(){
      $('.benefits').append(
        '<div class="benefit-field d-flex mb-2">' +
        '<input type="text" class="form-control form-control-lg" placeholder="Benefit" aria-label="benefit">' +
        '<button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;">' +
        '<span aria-hidden="true">&times;</span>' +
        '</button>' +
        '</div>'
      );
    });


  });
</script>

