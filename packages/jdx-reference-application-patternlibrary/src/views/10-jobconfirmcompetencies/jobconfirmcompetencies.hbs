<script>
  $(document).ready(function(){

    $(document).on('click', 'button.close', function() {
      $(this).parent().remove();
    });

    $('button.add-competency').click(function(){
      $(this).prev('.competencies').append(
        '<div class="benefit-field d-flex mb-2">' +
        '<input type="text" class="form-control form-control-lg" placeholder="Competency" aria-label="competency">' +
        '<button class="close ml-3" type="button" aria-label="Close" style="font-size: 3rem;">' +
        '<span aria-hidden="true">&times;</span>' +
        '</button>' +
        '</div>'
      );
    });


  });
</script>

