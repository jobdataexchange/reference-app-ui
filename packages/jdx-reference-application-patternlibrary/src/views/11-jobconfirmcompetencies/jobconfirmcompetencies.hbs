<script>
  $(document).ready(function(){


    $('#competency-1, #competency-2, #competency-3').change(function(){
      if ($(this).val() === 'other') {
        $(this).next().slideDown();
      } else {
        $(this).next().slideUp();
      }
    });


  });
</script>

