<div class="pt-4 d-flex justify-content-end">
  <button class="btn pr-0 exit-button" aria-label="Exit">
    <i class="fas fa-times" style="font-size: 36px;"></i>
  </button>
  <div class="confirm-exit d-none">
    <div class="d-flex align-items-baseline">
      Exit now? This will lose unsaved work.
      <button class="btn btn-lg text-primary exit-now">Exit</button>
      <button class="btn btn-lg text-primary keep-working">Keep Working</button>
    </div>
  </div>
</div>


<div class="pt-4 d-flex justify-content-between">
  <p>CREDENTIALING & OTHER HIRING REQUIREMENTS</p>
  <p class="flex-shrink-0">8 of 11</p>
</div>

<h1 class="pb-4">Experience Requirements</h1>
<p class="w-75 mb-5">Lorem ipsum.</p>

<form>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="required-experience">Required Experience</label>
    <input type="text" class="form-control form-control-lg" id="required-experience" placeholder="Required Experience">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="preferred-experience">Preferred Experience</label>
    <input type="text" class="form-control form-control-lg" id="preferred-experience" placeholder="Preferred Experience">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="equivalent-experience">Equivalent Experience</label>
    <input type="text" class="form-control form-control-lg" id="equivalent-experience" placeholder="Equivalent Experience">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="minimum-experience">Minimum Experience</label>
    <input type="text" class="form-control form-control-lg" id="minimum-experience" placeholder="Minimum Experience">
  </div>

  <div class="d-flex justify-content-between pt-5">
    <button type="button" class="btn btn-lg text-primary d-flex align-items-center p-0"><i class="fas fa-angle-left text-primary mr-3" style="font-size: 24px;"></i>Back</button>
    <button type="submit" class="btn btn-lg btn-primary">Next</button>
  </div>
</form>





<script>
  $(document).ready(function(){

    $('.exit-button').click(function(e){
      $(this).hide();
      $('.confirm-exit').removeClass('d-none');
    });

    $('.keep-working').click(function(e){
      $('.exit-button').show();
      $('.confirm-exit').addClass('d-none');
    });


  });
</script>

