<div class="pt-4 d-flex justify-content-between">
  <p>JOB OVERVIEW</p>
  <p class="flex-shrink-0">1 of 12</p>
</div>

<h1 class="pb-4">Hiring Organization Information</h1>
<p class="w-75 mb-5">Information provided here will appear by default in your job descriptions. Fields are optional unless otherwise noted â€” but the more details you can provide, the better your job descriptions will be.</p>

<form>
  <div class="form-group mb-4">
    <label class="font-weight-bold" for="org-name">Hiring Organization Name<span class="sr-only">, required field</span></label><span class="required">*</span>
    <input type="text" class="form-control form-control-lg" id="org-name" placeholder="Hiring Organization Name" aria-describedby="nameHelpBlock">
    <small id="nameHelpBlock" class="form-text text-muted">Official organization name (for example, the registered company name).</small>
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="overview">Hiring Organization Overview</label>
    <textarea class="form-control description-textarea" id="overview" rows="3" placeholder="Hiring Organization Overview" aria-describedby="overviewHelpBlock"></textarea>
    <small id="overviewHelpBlock" class="form-text text-muted">Describe the employer, career opportunities, and work environment.</small>
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="email">Email</label>
    <input type="email" class="form-control form-control-lg" id="email" placeholder="Email">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="website">Website</label>
    <input type="text" class="form-control form-control-lg" id="website" placeholder="Website">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="address">Hiring Organization Address</label>
    <input type="text" class="form-control form-control-lg" id="address" placeholder="Hiring Organization Address">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="phone">Phone Number</label>
    <input type="text" class="form-control form-control-lg" id="phone" placeholder="(888) 888-8888">
  </div>

  <div class="d-flex justify-content-between pt-5">
    <button type="button" class="btn btn-lg text-primary d-flex align-items-center p-0"><i class="fas fa-angle-left text-primary mr-3" style="font-size: 24px;"></i>Back</button>
    <button type="submit" class="btn btn-lg btn-primary">Next</button>
  </div>
</form>









<script>
  $(document).ready(function(){

    // Constructing the suggestion engine
    var industry = new Bloodhound({
      datumTokenizer: Bloodhound.tokenizers.whitespace,
      queryTokenizer: Bloodhound.tokenizers.whitespace,
      local: ['Software', 'Systems', 'Education', 'Law', 'Medicine']
    });

    // Initializing the typeahead
    $('#industry-code').typeahead({
        hint: true,
        highlight: true,
        minLength: 1
      },
      {
        name: 'industry',
        source: industry
      });
  });
</script>
