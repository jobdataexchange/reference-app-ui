<div class="pt-4 d-flex justify-content-end">
  <button class="btn pr-0 exit-button" aria-label="Exit">
    <i class="fas fa-times" style="font-size: 36px;"></i>
  </button>
  <div class="confirm-exit d-none">
    <div class="d-flex align-items-baseline">
      Exit now? This will lose unsaved work.
      <button class="btn btn-lg text-primary exit-now">Exit</button>
      <button class="btn btn-lg text-primary keep-working">Keep Working</button>
    </div>
  </div>
</div>


<div class="pt-4 d-flex justify-content-between">
  <h1 class="pb-4">Additional Requirements</h1>
  <p class="flex-shrink-0">9 of 11</p>
</div>

<p class="w-75 mb-5">Lorem ipsum.</p>

<form>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="application-location-requirement">Application Location Requirement</label>
    <input type="text" class="form-control form-control-lg" id="application-location-requirement" placeholder="Application Location Requirement">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="citizenship-requirement">Citizenship Requirement</label>
    <input type="text" class="form-control form-control-lg" id="citizenship-requirement" placeholder="Citizenship Requirement">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="physical-requirement">Physical Requirement</label>
    <input type="text" class="form-control form-control-lg" id="physical-requirement" placeholder="Physical Requirement">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="sensory-requirement">Sensory Requirement</label>
    <input type="text" class="form-control form-control-lg" id="sensory-requirement" placeholder="Sensory Requirement">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="security-clearance-requirement">Security Clearance Requirement</label>
    <input type="text" class="form-control form-control-lg" id="security-clearance-requirement" placeholder="Security Clearance Requirement">
  </div>

  <div class="form-group mb-4">
    <label class="font-weight-bold" for="special-commitment">Special Commitment</label>
    <input type="text" class="form-control form-control-lg" id="special-commitment" placeholder="Special Commitment">
  </div>

  <div class="d-flex justify-content-between pt-5">
    <button type="button" class="btn btn-lg text-primary d-flex align-items-center p-0"><i class="fas fa-angle-left text-primary mr-3" style="font-size: 24px;"></i>Back</button>
    <button type="submit" class="btn btn-lg btn-primary">Next</button>
  </div>
</form>





<script>
  $(document).ready(function(){

    $('.exit-button').click(function(e){
      $(this).hide();
      $('.confirm-exit').removeClass('d-none');
    });

    $('.keep-working').click(function(e){
      $('.exit-button').show();
      $('.confirm-exit').addClass('d-none');
    });

  });
</script>

